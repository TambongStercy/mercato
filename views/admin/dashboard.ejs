<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    <link rel="stylesheet" href="/admin/styles.css" />
    <title>MERCATO | Admin</title>
  </head>
  <body id="body">
    <div class="container">
      <nav class="navbar">
        <div class="nav_icon" onclick="toggleSidebar()">
          <i class="fa fa-bars" aria-hidden="true"></i>
        </div>
        <div class="navbar__left">
          <a class="active_link" href="/admin/">Dashboard</a>
        </div>
        <div class="navbar__right">
          <a href="#">
            <i class="fa fa-clock-o" aria-hidden="true"></i>
          </a>
          <a href="#">
            <img width="30" src="/assets/avatar.svg" alt="" />
            <!-- <i class="fa fa-user-circle-o" aria-hidden="true"></i> -->
          </a>
        </div>
      </nav>

      <main>
        <div class="main__container">
          <!-- MAIN TITLE STARTS HERE -->

          <div class="main__title">
            <img src="/assets/hello.svg" alt="" />
            <div class="main__greeting">
              <h1>Hello Admin</h1> <!--Put the name of the admin that connected foolish-->
              <p>Welcome to your admin dashboard</p>
            </div>
          </div>

          <!-- MAIN TITLE ENDS HERE -->

          <!-- MAIN CARDS STARTS HERE -->
          <div class="main__cards">
            <div class="card">
              <i
                class="fa fa-user-o fa-2x text-lightblue"
                aria-hidden="true"
              ></i>
              <div class="card_inner">
                <p class="text-primary-p">Nombre d'utilisateurs</p>
                <span class="font-bold text-title"><%= userCount %> </span> <!--Each time a user creates an account, this increases by one-->
              </div>
            </div>

            <div class="card">
              <i class="ri-cash-fill"></i>
              <div class="card_inner">
                <p class="text-primary-p">Total des ventes</p>
                <span class="font-bold text-title">0 FCFA</span> <!--Each time a user confirms payment, the amount increases here-->
              </div>
            </div>

            <div class="card">
              <i class="ri-coins-fill"></i>
              <div class="card_inner">
                <p class="text-primary-p">Ventes du jour</p>
                <span class="font-bold text-title">0 FCFA</span> <!--This resets every day at midnight-->
              </div>
            </div>

            <div class="card">
              <i class="ri-funds-fill"></i>
              <div class="card_inner">
                <p class="text-primary-p">Total des ventes</p>
                <span class="font-bold text-title">0 Ventes</span> <!--This gives the total number of items sold-->
              </div>
            </div>
          </div>
          <!-- MAIN CARDS ENDS HERE -->

          <!-- CHARTS STARTS HERE -->
          <div class="charts">
            <div class="charts__left">
              <div class="charts__left__title">
                <div>
                  <h1>Mercato</h1>
                  <p>Yaounde, Centre, CMR</p>
                </div>
               
              </div>
              <div id="apex1"></div>
            </div>

            <div class="charts__right">
              <div class="charts__right__title">
                <div>
                  <h1>Mercato</h1>
                  <p>Yaounde, Centre, CMR</p>
                </div>
              </div>

              <div class="charts__right__cards">
                <div class="card1">
                  <h1>Chiffre d'affaire</h1>
                  <p>0 FCFA</p>
                </div>

                <div class="card2">
                  <h1>Benefice</h1><!--Sum of all the items sold selling price - all the items sold cost price-->
                  <p>0 FCFA</p>
                </div>

                <div class="card3">
                  <h1>Utilisateurs</h1>
                  <p><%= userCount %></p>
                </div>

                <div class="card4">
                  <h1>Commandes</h1>
                  <p>0</p>
                </div>
              </div>
            </div>
          </div>
          <!-- CHARTS ENDS HERE -->
        </div>
      </main>

      <div id="sidebar">
        <div class="sidebar__title">
          <div class="sidebar__img">
            <img src="/assets/logo-no-background-white.png" alt="logo" />
            <h1>Mercato</h1>
          </div>
          <i
            onclick="closeSidebar()"
            class="fa fa-times"
            id="sidebarIcon"
            aria-hidden="true"
          ></i>
        </div>

        <div class="sidebar__menu">
          <div class="sidebar__link active_menu_link">
            <i class="fa fa-home"></i>
            <a href="/admin/">Dashboard</a>
          </div>
          <h2>MNG</h2>
          <div class="sidebar__link">
            <i class="fa fa-user-secret" aria-hidden="true"></i>
            <a href="/admin/addproduct">Ajouter un article</a>
          </div>
          <div class="sidebar__link">
            <i class="fa fa-archive"></i>
            <a href="/admin/products">Warehouse</a>
          </div>
          <div class="sidebar__link">
            <i class="fa fa-handshake-o"></i>
            <a href="/admin/clients">Clients</a>
          </div>
          <h2>Promo</h2>
          <div class="sidebar__link">
            <i class="ri-discount-percent-fill"></i>
            <a href="/admin/promo">Promo Code</a>
          </div>
          
          <div class="sidebar__logout">
            <i class="fa fa-power-off"></i>
            <a href="/admin/logout">Log out</a>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/admin/script.js"></script>
  </body>
</html>
