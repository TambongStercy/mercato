<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    <link rel="stylesheet" href="/admin/styles.css" />
    <link rel="stylesheet" href="/admin/style.css">
    <link rel="stylesheet" href="/admin/clients.css">
    <title>MERCATO | Admin</title>
  </head>
  <body id="body">
    <div class="container">
      <nav class="navbar">
        <div class="nav_icon" onclick="toggleSidebar()">
          <i class="fa fa-bars" aria-hidden="true"></i>
        </div>
        <div class="navbar__left">
          <a class="active_link" href="/admin">Dashboard</a>
        </div>
        <div class="navbar__right">
          <a href="#">
            <i class="fa fa-clock-o" aria-hidden="true"></i>
          </a>
          <a href="#">
            <img width="30" src="/assets/avatar.svg" alt="" />
            <!-- <i class="fa fa-user-circle-o" aria-hidden="true"></i> -->
          </a>
        </div>
      </nav>

      <main>
        <div class="main__container">
          <!-- MAIN TITLE STARTS HERE -->

          <div class="main__title">
            <img src="/assets/hello.svg" alt="" />
            <div class="main__greeting">
              <h1>Hello admin_name</h1> <!--Put the name of the admin that connected foolish-->
              <p>Welcome. Ajouter un article</p>
            </div>
          </div>

          <!-- MAIN TITLE ENDS HERE -->

          <!-- MAIN ADD ITEM STARTS HERE -->
          <div class="main__cards">
            <div class="main__container">
                <div class="container">
                    <table class="client-list">
                        <thead>
                            <tr>
                                <th>Client Name</th>
                                <th>Phone Number</th>
                                <th>Number of Articles Bought</th>
                                <th>Joined on</th>
                                <th>Address</th>
                            </tr>
                        </thead>
                        <tbody>
                          <% users.forEach((user) => { %>
                            <tr>
                                <td><%= user.name %></td>
                                <td><%= user.telephone %> </td>
                                <td> 0 </td>
                                <td><%= user.formattedCreatedAt() %> </td>
                                <td> address </td>
                            </tr>
                            <% }) %>
                            <!-- Add more rows for additional clients -->
                        </tbody>
                    </table>
                </div>
          </div>
          <!-- MAIN ADD ITEMS ENDS HERE -->

      </main>

      <div id="sidebar">
        <div class="sidebar__title">
          <div class="sidebar__img">
            <img src="/assets/logo-no-background-white.png" alt="logo" />
            <h1>Mercato</h1>
          </div>
          <i
            onclick="closeSidebar()"
            class="fa fa-times"
            id="sidebarIcon"
            aria-hidden="true"
          ></i>
        </div>

        <div class="sidebar__menu">
          <div class="sidebar__link ">
            <i class="fa fa-home"></i>
            <a href="/admin/">Dashboard</a>
          </div>
          <h2>MNG</h2>
          <div class="sidebar__link">
            <i class="fa fa-user-secret" aria-hidden="true"></i>
            <a href="/admin/addproduct">Ajouter un article</a>
          </div>
          <div class="sidebar__link">
            <i class="fa fa-archive"></i>
            <a href="/admin/products">Warehouse</a>
          </div>
          <div class="sidebar__link active_menu_link">
            <i class="fa fa-handshake-o"></i>
            <a href="/admin/clients">Clients</a>
          </div>
          <h2>Promo</h2>
          <div class="sidebar__link">
            <i class="ri-discount-percent-fill"></i>
            <a href="Coupon.html">Coupons</a>
          </div>
          <div class="sidebar__logout">
            <i class="fa fa-power-off"></i>
            <a href="/admin/logout">Log out</a>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/script.js"></script>
  </body>
</html>
